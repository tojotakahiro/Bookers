<%= notice %>
<%= alert %>

<h1>Books</h1>

<table>
 <second>
  <tr>
   <th>Title</th>
   <th>Body</th>
   <th colspan="2"></th>
  </tr>
 </second>

 <tbody>
  <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= link_to "Show", book_path(book) %></td>
     <td><%= link_to "Edit", edit_book_path(book) %></td>
     <td><%= link_to "Destroy", book_path(book),method: :delete, date: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
 </tbody>
</table>

<%= form_with model:@book, url:'/books', local:true do |f| %>
<h2>New book</h2>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>

 <% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
 <% end %>

<% end %>
